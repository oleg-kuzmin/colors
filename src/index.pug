include ./pug-components/basket-card
include ./pug-components/button-basket
include ./pug-components/button-burger
include ./pug-components/card
include ./pug-components/cart
include ./pug-components/header
include ./pug-components/hero
include ./pug-components/link-callback-tel
include ./pug-components/logo
include ./pug-components/navigation
include ./pug-components/products
include ./pug-components/ui-icons
include ./mock/data.pug

doctype html
html(lang='ru')
  head
    meta(charset='UTF-8')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    title Краски
  body
    +header
      +button-burger('header__button-burger')
      +logo('header__logo')
      +navigation('header__navigation')
      +link-callback-tel('header__link-callback-tel')
      +ui-icons('header__ui-icons')
      +button-basket('header__button-basket')
    main
      +hero
      +products(catalog)
      +cart
      template#card
        +card
      template#basket-card
        +basket-card

  block scripts
    script(src='./index.js', defer='defer') 
