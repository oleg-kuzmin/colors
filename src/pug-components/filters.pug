include ./filter-checkbox

mixin filters(className)
  div(class=['filters', className])
    .filters__line
    .filters__content
      +filter-checkbox('isNew', 'Новинки') 
      +filter-checkbox('inStock', 'Есть в наличии') 
      +filter-checkbox('isContract', 'Контрактные') 
      +filter-checkbox('isExclusive', 'Эксклюзивные') 
      +filter-checkbox('isSale', 'Распродажа') 
